[alias]
    check  = "! $GIT/check"
	ignore = "! $GIT/ignore"
	remove = "! $GIT/remove"
	readme = "! $GIT/readme"
	rename = "! $GIT/rename"
	root   = "! $GIT/root"
	update = "! $GIT/update"
	initialize = "! $GIT/initialize"
    subtree-add = "!f() { git subtree add --prefix $2 $1 ${3:-main} --squash; }; f"
    subtree-pull = "!f() { git subtree pull --prefix $2 $1 ${3:-main} --squash; }; f"
    subtree-push = "!f() { git subtree push --prefix $1 $2 ${3:-main}; }; f"

[init]
	defaultBranch = main

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[log]
	date = iso
